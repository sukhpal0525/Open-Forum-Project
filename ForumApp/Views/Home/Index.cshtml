@model IEnumerable<Category>

<h2>Forum Categories</h2>

<ul>
    @foreach (var category in Model)
    {
        <li>
            <a href="@Url.Action("Category", "Forum", new { id = category.Id })">@category.Name</a>
            <span>@category.Threads.Count threads</span>
        </li>
    }
</ul>
